<%- include('header') %>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div >
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center"><%= language === 'russian' ? 'Регистрация' : 'Registration' %></h1>
                </div>
                <div class="card-body">
                    <% if (typeof successMessage !== 'undefined') { %>
                        <div class="alert alert-success" role="alert">
                            <%= successMessage %>
                            <p><%= language === 'russian' ? 'Нажмите' : 'Click' %> <a href="/login"><%= language === 'russian' ? 'здесь' : 'here' %></a> <%= language === 'russian' ? 'чтобы войти.' : 'to login.' %></p>
                        </div>
                    <% } %>

                    <% if (typeof errorMessage !== 'undefined') { %>
                        <div class="alert alert-danger" role="alert">
                            <%= errorMessage %>
                        </div>
                    <% } %>

                    <form action="/register" method="post">
                        <div class="form-group">
                            <label for="username"><%= language === 'russian' ? 'Имя пользователя' : 'Username' %></label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="<%= language === 'russian' ? 'Введите ваше имя пользователя' : 'Enter your username' %>" value="<%= typeof username !== 'undefined' ? username : '' %>" required>
                        </div>
                        <div class="form-group">
                            <label for="password"><%= language === 'russian' ? 'Пароль' : 'Password' %></label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="<%= language === 'russian' ? 'Введите ваш пароль' : 'Enter your password' %>" required>
                        </div>
                        <div class="form-group">
                            <label for="password2"><%= language === 'russian' ? 'Подтвердите пароль' : 'Confirm Password' %></label>
                            <input type="password" class="form-control" id="password2" name="password2" placeholder="<%= language === 'russian' ? 'Подтвердите ваш пароль' : 'Confirm your password' %>" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block"><%= language === 'russian' ? 'Регистрация' : 'Register' %></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>
